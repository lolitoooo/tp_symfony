        <div class="row">
            <div class="col-md-12 mt-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">{% block admin_title %}{% endblock %}</h2>
                        {% block admin_actions %}{% endblock %}
                    </div>
                    <div class="card-body">
