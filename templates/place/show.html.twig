{% extends 'base.html.twig' %}

{% block title %}{{ place.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">{{ place.name }}</h1>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="card-title">Description</h5>
                        <p class="card-text">{{ place.description|nl2br }}</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="card-title">Adresse</h5>
                        <p class="card-text">
                            <i class="fas fa-map-marker-alt me-2"></i>{{ place.address }}<br>
                            <i class="fas fa-city me-2"></i>{{ place.city }}, {{ place.zipCode }}<br>
                            <i class="fas fa-globe me-2"></i>{{ place.country }}
                        </p>
                    </div>

                    <div class="mb-4">
                        <h5 class="card-title">Propriétaire</h5>
                        <p class="card-text">
                            <i class="fas fa-user me-2"></i>{{ place.owner.name }} {{ place.owner.lastname }}
                        </p>
                    </div>

                    <div class="text-muted">
                        <small>
                            Créé le {{ place.createdAt|date('d/m/Y H:i') }}
                        </small>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_place_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
