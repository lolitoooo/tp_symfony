{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">{{ event.title }}</h1>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="card-title">Description</h5>
                        <p class="card-text">{{ event.description|nl2br }}</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="card-title">Date et heure</h5>
                            <p class="card-text">
                                <i class="fas fa-calendar-alt me-2"></i>Du {{ event.startDate|date('d/m/Y H:i') }}<br>
                                <i class="fas fa-calendar-check me-2"></i>Au {{ event.endDate|date('d/m/Y H:i') }}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">Lieu</h5>
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt me-2"></i>{{ event.location }}
                            </p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="card-title">Organisateur</h5>
                        <p class="card-text">
                            <i class="fas fa-user me-2"></i>{{ event.organizer.name }} {{ event.organizer.lastname }}
                        </p>
                    </div>

                    <div class="text-muted">
                        <small>
                            Créé le {{ event.createdAt|date('d/m/Y H:i') }}<br>
                            Dernière modification le {{ event.updatedAt|date('d/m/Y H:i') }}
                        </small>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
