{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}

                        <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
